{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
