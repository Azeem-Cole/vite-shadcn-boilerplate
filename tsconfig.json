{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2021", "ES2022", "ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "strictNullChecks": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"

    /* Linting */
  },
  "exclude": ["**/node_modules/**", "**/scripts/**", "**/dist/**"]
}
