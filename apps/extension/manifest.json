{
  "manifest_version": 3,
  "name": "Bookmark Manager Extension",
  "version": "1.0.0",
  "description": "A powerful bookmark management extension built with Vite and shadcn/ui",
  "action": {
    "default_popup": "index.html",
    "default_title": "Bookmark Manager"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["bookmarks", "activeTab", "storage", "contextMenus"],
  "host_permissions": ["<all_urls>", "http://*/*", "https://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "options_page": "options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+B",
        "mac": "Alt+B"
      },
      "description": "Open bookmark manager"
    },
    "add_bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Add current page to bookmarks"
    }
  }
}
