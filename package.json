{
  "name": "link-saver",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run dev:website & npm run dev:packages",
    "dev": "npm run dev --workspaces --if-present",
    "dev:website": "npm run dev --workspace=apps/website",
    "dev:extension": "npm run dev --workspace=apps/extension",
    "dev:packages": "npm run dev --workspace=packages/ui",
    "build": "npm run build --workspaces --if-present",
    "build:website": "npm run build --workspace=apps/website",
    "build:extension": "npm run build --workspace=apps/extension",
    "build:packages": "npm run build --workspace=packages/ui",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "install:all": "npm install"
  }
}
